{
  "extends": "./tsconfig.json",
  "include": [".next/types/**/*.ts", "src/**/*.ts", "src/**/*.tsx", "next-env.d.ts"],

  "exclude": [
    "./.next/",
    "./.vscode/",
    "./.wrangler/",
    "./analyze/",
    "./certificates/",
    "./coverage/",
    "./cypress/",
    "./out/",
    "./scripts/",
    "./src/**/*.e2e.ts",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./src/test/",
    "./out/",
    "./.*.json",
    "./*.config.*",
    "./lighthouse.*",
    "./tsconfig.*"
  ],

  "compilerOptions": {
    "jsx": "preserve",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "rootDir": "src",
    "skipLibCheck": false,
    "sourceMap": true,
    "sourceRoot": "https://github.com/quisido/quisi.do/raw/main/packages/next/src/",
    "target": "ES5"
  }
}
