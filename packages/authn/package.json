{
  "name": "@quisido/authn",
  "type": "module",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "attw": "attw",
    "delete": "wrangler d1 execute authn --file=./sql/delete.sql --local",
    "deploy": "wrangler deploy src/index.ts --env production --outdir dist",
    "deploy:dry-run": "wrangler deploy src/index.ts --dry-run --outdir dist",
    "deploy:staging": "wrangler deploy src/index.ts --env staging --outdir dist",
    "dev": "wrangler dev --local-protocol https",
    "init": "yarn run init:local && yarn run init:production && yarn run init:staging",
    "init:local": "yarn run init:local:emails && yarn run init:local:oauth && yarn run init:local:users",
    "init:local:emails": "wrangler d1 execute authn --file=./sql/emails.sql --local",
    "init:local:oauth": "wrangler d1 execute authn --file=./sql/oauth.sql --local",
    "init:local:users": "wrangler d1 execute authn --file=./sql/users.sql --local",
    "init:production": "yarn run init:production:emails && yarn run init:production:oauth && yarn run init:production:users",
    "init:production:emails": "wrangler d1 execute authn --file=./sql/emails.sql",
    "init:production:oauth": "wrangler d1 execute authn --file=./sql/oauth.sql",
    "init:production:users": "wrangler d1 execute authn --file=./sql/users.sql",
    "init:staging": "yarn run init:staging:emails && yarn run init:staging:oauth && yarn run init:staging:users",
    "init:staging:emails": "wrangler d1 execute authn-staging --file=./sql/emails.sql",
    "init:staging:oauth": "wrangler d1 execute authn-staging --file=./sql/oauth.sql",
    "init:staging:users": "wrangler d1 execute authn-staging --file=./sql/users.sql",
    "jest": "jest",
    "jest:watch": "jest --watch",
    "login": "wrangler login",
    "prepack": "exit 0",
    "prepublish": "exit 0",
    "whoami": "wrangler whoami"
  },
  "dependencies": {
    "cookie": "^0.6.0",
    "form-urlencoded": "^2.0.4",
    "jsonapi-datastore": "^0.4.0-beta",
    "patreon": "^0.4.1",
    "unknown2string": "workspace:^"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.13.2",
    "@cloudflare/workers-types": "^4.20231121.0",
    "@types/cookie": "^0",
    "@types/jest": "^29.5.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2",
    "wrangler": "^3.17.1"
  }
}
