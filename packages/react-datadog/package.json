{
  "name": "react-datadog",
  "version": "2.0.1",
  "author": "quisi.do <react-datadog@quisi.do>",
  "description": "React wrapper for instantiating Datadog",
  "homepage": "https://github.com/quisido/quisi.do/tree/main/packages/react-datadog#readme",
  "license": "MIT",
  "main": "./dist/index.js",
  "repository": "github:quisido/quisi.do",
  "type": "module",
  "types": "./dist/index.d.ts",
  "bugs": {
    "email": "react-datadog@quisi.do",
    "url": "https://github.com/quisido/quisi.do/issues"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/quisido"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "attw": "attw",
    "clean": "rm -rf dist jest && rm -f tsconfig.prepack.tsbuildinfo tsc-output.cpuprofile",
    "eslint": "eslint . --cache --color --exit-on-fatal-error --format @microsoft/eslint-formatter-sarif --max-warnings 0 --output-file ../../sarif/react-datadog.sarif --stats || (echo \"ESLint failed.\" && exit 1)",
    "eslint:fix": "eslint . --cache --color --exit-on-fatal-error --fix --max-warnings 0",
    "jest": "jest --config jest.config.cjs",
    "jest:watch": "jest --config jest.config.cjs --watch",
    "prepack": "yarn run tsc",
    "prepublish": "concurrently --kill-others-on-fail --names attw,eslint,jest \"yarn run attw\" \"yarn run eslint\" \"yarn run jest\"",
    "tsc": "tsc --generateCpuProfile tsc-output.cpuprofile --project tsconfig.prepack.json"
  },
  "dependencies": {
    "use-shallow-memo": "workspace:^"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.15.3",
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "@babel/preset-react": "^7.24.1",
    "@babel/preset-typescript": "^7.24.1",
    "@datadog/browser-rum": "^5.15.0",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@monorepo-template/eslint-config": "^1.0.7",
    "@monorepo-template/jest-transformer": "^1.0.2",
    "@quisido/eslint-config": "workspace:^",
    "@testing-library/react": "^15.0.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.79",
    "babel-jest": "^29.7.0",
    "babel-plugin-replace-import-extension": "^1.1.4",
    "cjs-ts": "workspace:^",
    "concurrently": "^8.2.2",
    "eslint": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.2",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "@datadog/browser-rum": "^5.0.0",
    "react": ">=17.0.0"
  }
}
