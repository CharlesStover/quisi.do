{
  "extends": "@monorepo-template/tsconfig",
  "include": ["src/**/*.ts", "src/**/*.tsx"],

  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types/"
  },

  "exclude": [
    "dist/",
    "jest/",
    "node_modules/",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/test/"
  ]
}
