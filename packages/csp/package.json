{
  "name": "@quisido/csp",
  "type": "module",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -rf .wrangler coverage",
    "dev": "wrangler dev --persist-to ../../.wrangler/state",
    "eslint": "eslint . --cache --color --exit-on-fatal-error --max-warnings 0",
    "eslint:fix": "eslint . --cache --color --exit-on-fatal-error --fix --max-warnings 0",
    "local:delete": "wrangler d1 execute csp-dev --file=./sql/delete.sql --local --persist-to ../../.wrangler/state",
    "local:drop": "wrangler d1 execute csp-dev --file=./sql/drop.sql --local --persist-to ../../.wrangler/state",
    "local:init": "yarn run local:init:projects && yarn run local:init:reports && yarn run local:delete",
    "local:init:projects": "wrangler d1 execute csp-dev --file=./sql/projects.sql --local --persist-to ../../.wrangler/state",
    "local:init:reports": "wrangler d1 execute csp-dev --file=./sql/reports.sql --local --persist-to ../../.wrangler/state",
    "local:reinit": "yarn run local:drop && yarn run local:init",
    "login": "wrangler login",
    "prepack": "exit 0",
    "prepublish": "concurrently --kill-others-on-fail --names eslint,publint,vitest \"yarn run eslint\" \"yarn run publint\" \"yarn run vitest:run\"",
    "production:deploy": "wrangler deploy src/index.ts --env production --outdir dist",
    "production:deploy:dry-run": "wrangler deploy src/index.ts --dry-run --env production --outdir dist",
    "production:init": "yarn run production:init:projects && yarn run production:init:reports",
    "production:init:projects": "wrangler d1 execute csp --env production --file=./sql/projects.sql --remote",
    "production:init:reports": "wrangler d1 execute csp --env production --file=./sql/reports.sql --remote",
    "publint": "publint",
    "staging:deploy": "wrangler deploy src/index.ts --env staging --outdir dist --remote",
    "staging:deploy:dry-run": "wrangler deploy src/index.ts --dry-run --env staging --outdir dist --remote",
    "staging:init": "yarn run staging:init:projects && yarn run staging:init:reports",
    "staging:init:projects": "wrangler d1 execute csp-staging --env staging --file=./sql/projects.sql --remote",
    "staging:init:reports": "wrangler d1 execute csp-staging --env staging --file=./sql/reports.sql --remote",
    "vitest": "vitest",
    "vitest:run": "vitest run",
    "vitest:watch": "vitest watch",
    "whoami": "wrangler whoami"
  },
  "dependencies": {
    "@quisido/csp-shared": "workspace:^",
    "@quisido/proposal-async-context": "workspace:^",
    "@quisido/worker": "workspace:^",
    "cloudflare-utils": "workspace:^",
    "fmrs": "workspace:^"
  },
  "devDependencies": {
    "@babel/core": "^7.25.8",
    "@babel/preset-env": "^7.25.8",
    "@babel/preset-react": "^7.25.7",
    "@babel/preset-typescript": "^7.25.7",
    "@cloudflare/workers-types": "^4.20241018.0",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@quisido/eslint-config": "workspace:^",
    "@quisido/vitest-config": "workspace:^",
    "@types/eslint": "^9.6.1",
    "@vitest/coverage-istanbul": "^2.1.3",
    "babel-plugin-replace-import-extension": "^1.1.4",
    "cjs-ts": "workspace:^",
    "concurrently": "^9.0.1",
    "eslint": "^9.13.0",
    "publint": "^0.2.11",
    "typescript": "^5.6.3",
    "vite": "^5.4.9",
    "vitest": "^2.1.3",
    "wrangler": "^3.81.0"
  }
}
