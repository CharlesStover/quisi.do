  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/CharlesStover"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "eslint": "eslint '**/*' --format @microsoft/eslint-formatter-sarif --output-file ../../sarif/use-offline.sarif || eslint '**/*'",
    "eslint:fix": "eslint '**/*' --fix",
    "jest": "jest",
    "jest:watch": "jest --watch",
    "prepack": "yarn run rollup",
    "prepublish": "concurrently --kill-others-on-fail --names eslint,jest \"yarn run eslint\" \"yarn run jest\"",
    "rollup": "rollup --config",
    "rollup:watch": "rollup --config --watch"
  },
  "dependencies": {
