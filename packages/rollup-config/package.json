  "author": "Chaz Quisido <rollup-config@quisi.do>",
  "description": "preconfigured Rollup configuration",
  "homepage": "https://github.com/CharlesStover/quisi.do/tree/main/packages/rollup-config#readme",
  "license": "MIT",
  "main": "./dist/index.js",
  "repository": "github:CharlesStover/quisi.do",
  "type": "module",
  "types": "./dist/index.d.ts",
