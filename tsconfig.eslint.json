{
  "extends": "@monorepo-template/react-application-tsconfig/eslint",
  "include": ["**/*", "**/*.json", ".eslintrc.json", "cypress.config.ts"],

  "compilerOptions": {
    "types": ["react/next", "react-dom/next"]
  },

  "exclude": [
    ".git/",
    ".idea/",
    ".yarn/",
    "build/",
    "coverage/",
    "cypress/coverage/",
    "cypress/screenshots/",
    "cypress/videos/",
    "jest/cache/",
    "jest/coverage/",
    "node_modules/"
  ]
}
