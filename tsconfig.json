{
  "extends": "@monorepo-template/tsconfig",
  "include": ["src"],

  "compilerOptions": {
    "jsx": "react-jsx",
    "sourceMap": true,
    "target": "ES5",
    "types": ["jest"]
  },

  "exclude": [
    ".git/",
    ".yarn/cache/",
    ".yarn/sdks/",
    ".yarn/unplugged/",
    "build/",
    "coverage/",
    "cypress/coverage/",
    "cypress/screenshots/",
    "cypress/videos/",
    "jest/",
    "node_modules/",
    "src/**/*.e2e.ts"
  ]
}
