{
  "extends": "@monorepo-template/react-application-tsconfig",
  "include": ["src"],

  "compilerOptions": {
    "types": ["react/next", "react-dom/next"]
  },

  "exclude": [
    ".git/",
    ".idea/",
    ".yarn/cache/",
    ".yarn/sdks/",
    ".yarn/unplugged/",
    "build/",
    "coverage/",
    "cypress/coverage/",
    "cypress/screenshots/",
    "cypress/videos/",
    "jest/",
    "node_modules/",
    "src/**/*.e2e.ts"
  ]
}
